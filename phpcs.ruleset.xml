<?xml version="1.0"?>
<ruleset name="Indieweb-Post-Kinds">
	<description>Indieweb Post Kinds Standards</description>

	<file>./indieweb-post-kinds.php</file>
	<file>./includes/</file>
	<exclude-pattern>*/includes/*\.(inc|css|js|svg)</exclude-pattern>
	<exclude-pattern>*/includes/Mf2/*</exclude-pattern>
	<rule ref="PHPCompatibility"/>
	<config name="testVersion" value="5.3-"/>
	<rule ref="WordPress-Core" />	
	<exclude name="WordPress.Files.FileName.InvalidClassFileName" />

	<rule ref="WordPress-Extra" />
        <rule ref="WordPress.WP.I18n"/>
	<config name="text_domain" value="indieweb-post-kinds,default"/>
	<rule ref="WordPress-VIP">
		<exclude name="WordPress.VIP.FileSystemWritesDisallow" />
		<exclude name="WordPress.VIP.RestrictedFunctions" />
		<exclude name="WordPress.VIP.RestrictedVariables" />
		<exclude name="WordPress.VIP.SuperGlobalInputUsage" />
		<exclude name="WordPress.VIP.ValidatedSanitizedInput" />
		<exclude name="WordPress.CSRF.NonceVerification" />
		<exclude name="WordPress.XSS.EscapeOutput" />
		<exclude name="WordPress.VIP.PostsPerPage.posts_per_page" />
	</rule>
</ruleset>
